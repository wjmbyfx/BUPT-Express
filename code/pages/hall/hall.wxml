<!--pages/hall/hall.wxml-->
<view class="headcontainer">
    
<!-- <text class="head">公告栏</text> -->
<view style="height: 35vh;">
    <image  src="{{src}}" mode="widthFix" style="width: 100%;"/>
</view>



<view class="box1" data-_id="{{currentOrder._id}}" bindtap="getCurrentOrder">
    <view class="ordernow">
         当前订单
    </view>
    <view wx:if="{{!currentStatus}}" class="status">当前没有订单
    </view>

    <view wx:if="{{currentStatus}}" class="status">
        <status status="{{currentStatus}}"></status>
    </view>
    
    <view class="inbox1-2">
    <text style="line-height: 45rpx;">送往:</text>
    <text class="position" wx:if="{{currentLocation}}">{{currentLocation}}</text>
    </view>
    <view class="inbox1-3">

    <text>提交时间:</text>
    <text wx:if="{{currentSubmitTime}}">{{currentSubmitTime}}</text>

    <view>
        <text>期望送达:</text>
        <text wx:if="{{currentExpectedTime}}">{{currentExpectedTime}}</text>
    </view>
    
</view>
    

    
    
    

</view>
</view>

<!-- 订单列表 -->

<view class="box2">
<view class="box2title">历史订单</view>
    <view class="order">   
        <text>全部订单></text>
    </view>

    <view wx:if="{{orderList}}" wx:for="{{orderList}}" wx:key="_id">
        <view class="inbox2" data-_id="{{item._id}}" bindtap="getSelectedOrder">
            
            <status status="{{item.displayStatus}}"></status>
            <text>{{item.submitTime}}</text>
        </view>
        
    </view>
</view>
<button>刷新</button>
<button type="primary">去发布</button>