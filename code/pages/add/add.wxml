<!--pages/add/add.wxml-->

<form bindsubmit="handleSubmit">
<view class="background">
    

<view class="box">

    <view class="inputbox">
        <text class="boxtap">收货地点(必选):</text>
    <radio-group bindchange="onOptionChange" name="option">
        <label><radio value="option1" />使用默认地址</label>
        <view>
            <label><radio value="option2"  />自定义地址</label>
        </view>
    </radio-group> 
    </view>

    <view class="inputbox">
        <text class="boxtap">新地址:</text>
        <input selection-start="2" class="weui-input" type="text" name="location" placeholder="请填入地址" disabled="{{inputDisabled}}" bindinput="onInput" value="{{location}}"/>
    </view>   

    <view class="inputbox">
        
        <text class="boxtap">预期送达(必选):</text>
        <view class="line">
            <picker  mode="date" value="{{date}}" start="2023-02-23" end="2033-02-23" bindchange="bindDateChange" name="date" class="picker">
            {{date}}
            <text>-</text>
            </picker>
            <picker mode="time" value="{{time}}" start="09:00" end="21:00" bindchange="bindTimeChange" name="time" class="picker">
      {{time}}
            </picker>
            <text>{{'<'}}--点击以变更</text>
        </view>
    </view>

</view>

    

    <view class="inputbox">
        <text class="boxtap">描述(必填):</text>
        <input class="weui-input"  placeholder="如体积、重量等" type="text" name="description"/>
    </view>

    <view class="inputbox">
        <text class="boxtap">备注(可选):</text>
        <input class="weui-input"  placeholder="如手机尾号等" type="text" name="note"/>
    </view>

    <view class="inputbox">
        <text class="boxtap">图片(代取码等,可选):</text>
        <image wx:if="{{src!=''}}" src="{{src}}" mode="widthFix" style="width: 50%;"></image>
        <view wx:if="{{src==''}}" class="picker" bindtap="handleUpload" style="text-decoration: underline;">点击上传</view>
        <view wx:if="{{src!=''}}" class="picker" bindtap="handleRemove" style="text-decoration: underline;">点击删除</view>
    </view>

    
    <button form-type="submit" type="primary">发布</button>
</view>
</form>

