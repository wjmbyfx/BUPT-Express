<!--pages/detail1/detail1.wxml-->
<view class="head1" wx:if="{{status}}">
    <status status="{{status}}"></status>
</view>

<view class="box1">
    <view class="head">
        订单详情
    </view>
    <view class="boxtap">
        订单号:
    </view>
    <view wx:if="{{_id}}">
        {{_id}}
    </view>
    <view class="boxtap">
        提交时间:
    </view>
    <view wx:if="{{time}}">
        {{time}}
    </view>
    <view class="boxtap">
        期望收货时间:
    </view>
    <view wx:if="{{expectedtime}}">
        {{expectedtime}}
    </view>
    <view class="boxtap">
        收货地址:
    </view>
    <view wx:if="{{location}}">
        {{location}}
    </view>
    <view class="boxtap">
        备注:
    </view>
    <view wx:if="{{note}}">
        {{note}}
    </view>
</view>

<view class="box2">
    <view class="head2">
        订单操作
    </view>



    <view class="inbox2">

        <view class="inbox" wx:if="{{!isPostman}}">
            <view class="confirm" bindtap="takeOrder">
            <view>
            <!-- <image src="/img/confirm.png" mode="widthFix"/> -->
            </view>
            <view>
            <text>接单</text>
            </view>
        </view>
    </view>

    <view class="inbox" wx:if="{{isPostman}}">
        <view class="cancle" bindtap="cancle">
        <view>
            <!-- <image src="/img/cancle.png" mode="widthFix"/> -->
        </view>
        <view>
            <text>取消接单</text>
        </view>
        </view>
    </view>

    <view class="inbox">
    <view class="suggest" bindtap="suggest">
        <view>
            <!-- <image src="/img/feedback.png" mode="widthFix"/> -->
        </view>
        
        <view>
            <text>提交反馈</text>
        </view>
        
        
    </view>
    </view>
    </view>

</view>