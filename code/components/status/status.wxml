<!--components/status/status.wxml-->
<view>
    <text wx:if="{{status=='notVerified'}}" style="color: #1abc9c!important;">待审核</text>
    <text wx:if="{{status=='rejected'}}" style="color: #c0392b!important;">未通过审核</text>
    <text wx:if="{{status=='pending'}}" style="color: #e67e22!important;">待接单</text>
    <text wx:if="{{status=='delivering'}}" style="color: #27ae60;">派送中</text>
    <text wx:if="{{status=='arrived'}}" style="color: #f39c12!important;">待取件</text>
    <text wx:if="{{status=='success'}}" style="color: #2980b9!important;">已完成</text>
    <text wx:if="{{status=='cancled'}}" style="color: #95a5a6!important;">已取消</text>
    <text wx:if="{{status=='warning'}}" style="color: #c0392b!important;">出错了</text>
</view>
