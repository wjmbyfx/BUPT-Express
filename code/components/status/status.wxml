<!--components/status/status.wxml-->
<view>
    <text wx:if="{{status=='待确认'}}" class="pending" style="color: #e67e22!important;">待确认</text>
    <text wx:if="{{status=='派送中'}}" class="delivering">派送中</text>
    <text wx:if="{{status=='已完成'}}" class='success' style="color: #2980b9!important;">已完成</text>
    <text wx:if="{{status=='已取消'}}" class='cancled' style="color: #95a5a6!important;">已取消</text>
    <text wx:if="{{status=='出错了'}}" class='warning' style="color: #c0392b!important;">出错了</text>
</view>
