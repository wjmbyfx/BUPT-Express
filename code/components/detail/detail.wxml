<!--pages/detail/detail.wxml-->
<view class="head1" wx:if="{{currentOrder.status}}">
    <status status="{{currentOrder.status}}"></status>
</view>

<view class="box1">
    <view class="head">
        订单详情
    </view>
    <view class="boxtap">
        订单号:
    </view>
    <view wx:if="{{_id}}">
        {{_id}}
    </view>
    <view class="boxtap">
        提交时间:
    </view>
    <view wx:if="{{currentOrder.time}}">
        {{currentOrder.time}}
    </view>
    <view class="boxtap">
        期望收货时间:
    </view>
    <view wx:if="{{currentOrder.expectedtime}}">
        {{currentOrder.expectedtime}}
    </view>
    <view class="boxtap">
        收货地址:
    </view>
    <view wx:if="{{currentOrder.location}}">
        {{currentOrder.location}}
    </view>
    <view class="boxtap">
        备注:
    </view>
    <view wx:if="{{currentOrder.note}}">
        {{currentOrder.note}}
    </view>

    <view>
    <view class="boxtap" wx:if="{{currentOrder.src!=''}}">
        图片:
    </view>
    <view wx:if="{{currentOrder.src}}">
        <image src="{{currentOrder.src}}" mode="widthFix" show-menu-by-longpress="true" style="height: 5%;" data-src="{{currentOrder.src}}" bindtap="handleImageTap"></image>
    </view>

    <view wx:if="{{(role=='admin'||role=='user')&&currentOrder.postmanContact}}">
        <view class="boxtap" >
            配送员联系方式:
        </view>
        <view>
            {{currentOrder.postmanContact}}
        </view>
    </view>

    <view wx:if="{{(role=='admin'||role=='user'||role=='takenPostman')&&currentOrder.userContact}}">
        <view class="boxtap" >
            用户联系方式:
        </view>
        <view >
            {{currentOrder.userContact}}
        </view>
    </view>


    </view>

    
    

</view>





